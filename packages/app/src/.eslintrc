{
  "env": {
    "browser": true,
    "node": false
  },
  "extends": "../bin/build-eslint.js",
  "overrides": [
    {
      "files": [
        "*.test.js",
        "*.spec.js",
        "*.test.jsx",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true,
        "node": false,
        "browser": false
      },
      "globals": {
        "errorHandler": true
      }
    }
  ],
  "rules": {
    "function-paren-newline": [0],
    "newline-per-chained-call": [0]
  }
}
